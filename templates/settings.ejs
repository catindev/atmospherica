    </head>
    <body>
        <a class="pagelogo"></a>
        <div class="status-box"></div>  
        <div class="mnu"><div class="panel">
            <a class="back" title="Home page" href="/"></a>
            <a class="signout" title="Sign out" href="/signout"></a>
        </div></div>
        <div class="overlay-white">
            <div class="profile">
                <span class="profile-logo"></span>
                <div id="settings-form" class="settings-form">
                  <p class="settings-input-panel"><label>Full name</label><input type="text" param="name" value="<%= name %>"/></p>
                  <p class="settings-input-panel"><label>Email</label><input type="text" param="email" value="<%= email %>"/></p> 
                  <p class="settings-input-panel"><label>Website</label><input type="text" param="website" value="<% if(website){ %><%= website %><% } %>"/></p> 
                  <p class="settings-input-panel"><label>New password</label><input type="password" param="password"/></p>                              
                  <p class="settings-button-panel"><span class="btn btn-onpage" id="save-settings">Update settings</span></p>
                </div>               
            </div>    
        </div>     
    </body>
